# top-most EditorConfig file
root = true

[*]
end_of_line = lf

# Java files
[*.{kt,kts}]
indent_style = space
indent_size = 4
tab_width = 4
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120
ktlint_standard_no-wildcard-imports = disabled

# XML files (like pom.xml, config, etc.)
[*.xml]
indent_style = space
indent_size = 2
charset = utf-8
insert_final_newline = true

[*.yaml]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown / text
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
charset = utf-8